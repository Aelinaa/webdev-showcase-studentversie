@{
    ViewData["Title"] = "Contactpagina";
}

<div class="container">

    <h1 class="gpdr-consent-status" id="content-gpdr-consent-status"></h1>

    <div class="content-gdpr-not-chosen hide gdpr-content-text">
        <p>Deze content wordt alleen getoond als gdpr consent niet is gekozen.</p>
    </div>

    <div class="content-gdpr-Accepted hide gdpr-content-text">
        <p>Deze content wordt alleen getoond als gdpr is geaccepteerd.</p>
    </div>

    <div class="content-gdpr-Rejected hide gdpr-content-text">
        <p>Deze content wordt alleen getoond als gdpr is verworpen.</p>
    </div>

    <section class="gdpr-consent hide">

        <div class="gdpr-consent__description">
            <p>
                Deze website gebruikt cookies.
                We gebruiken cookies om content te personaliseren, voor social media en het analyseren
                van verkeer op de website, advertenties.
            </p>
        </div>

        <div class="gdpr-consent__choice">
            <button class="gdpr-consent__button--Accepted">Ja, prima!</button>
            <button class="gdpr-consent__button--Rejected">Nee, liever niet</button>
        </div>

    </section>
</div>
